<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:background="@drawable/backeeos">

    <Button
        android:id="@+id/button4"
        android:layout_width="175dp"
        android:layout_height="65dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="45dp"
        android:backgroundTint="#F8D454"
        android:onClick="submited"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="413dp" />

    <LinearLayout
        android:id="@+id/linearLayout24"
        android:layout_width="wrap_content"
        android:layout_height="286dp"
        android:layout_marginTop="45dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="#F2F4F4"
            android:ems="10"
            android:hint="Name and Surname"
            android:inputType="textPersonName"
            android:textColor="#F3F4F8"
            android:textColorHint="#F3F4F8"
            android:textColorLink="#F3F4F8" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="e-mail Account"
            android:inputType="textEmailAddress"
            android:textColor="#F3F4F8"
            android:textColorHint="#F3F4F8"
            android:textColorLink="#F3F4F8" />

        <EditText
            android:id="@+id/editTextTextPersonName5"
            android:layout_width="351dp"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="User Name"
            android:inputType="textPersonName"
            android:textColor="#F3F4F8"
            android:textColorHint="#F3F4F8" />

        <EditText
            android:id="@+id/editTextTextPassword2"
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:textColor="#F3F4F8"
            android:textColorHint="#F3F4F8"
            android:textColorLink="#F3F4F8" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="re-password"
            android:inputType="textPassword"
            android:textColor="#F3F4F8"
            android:textColorHint="#F3F4F8" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout20"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="345dp"
        android:layout_marginBottom="175dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Who Are You?"
            android:textColor="#F3F4F8"
            android:textColorHint="#F3F4F8"
            android:textColorLink="#F3F4F8"
            android:textSize="18sp" />


        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:buttonTint="#F8D454"
            android:text="Astrounout"
            android:textColor="#F3F4F8" />

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_weight="1"
            android:buttonTint="#F8D454"
            android:text="Curious"
            android:textColor="#F3F4F8"
            android:textColorHint="#F3F4F8" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout21"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout20">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Gender:"
            android:textColor="#F3F4F8"
            android:textColorHint="#F3F4F8"
            android:textSize="18sp" />


        <RadioButton
            android:id="@+id/Button3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:buttonTint="#F8D454"
            android:text="Male"
            android:textColor="#F3F4F8" />

        <RadioButton
            android:id="@+id/Button4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="62dp"
            android:layout_weight="1"
            android:buttonTint="#F8D454"
            android:text="Female"
            android:textColor="#F3F4F8" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout25"
        android:layout_width="317dp"
        android:layout_height="53dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="18dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout21">

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="Age"
            android:inputType="number"
            android:textColor="#F3F4F8"
            android:textColorHint="#F3F4F8" />

        <EditText
            android:id="@+id/editTextNumber2"
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="Height"
            android:inputType="number"
            android:textColor="#F3F4F8"
            android:textColorHint="#F3F4F8"
            android:textColorLink="#F3F4F8" />

        <EditText
            android:id="@+id/editTextNumber3"
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="Weight"
            android:inputType="number"
            android:textColor="#F3F4F8"
            android:textColorHint="#F3F4F8"
            android:textColorLink="#F3F4F8" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>